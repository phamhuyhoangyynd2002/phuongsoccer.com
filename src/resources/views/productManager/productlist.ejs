<!DOCTYPE html>
<html>
  <head>
    <title>Quản Lý Sản Phẩm</title>
    <meta charset="utf-8" />
    <style type="text/css">
      table,
      th,
      td {
        text-align: left;
        border: solid rgb(227, 230, 228) 1px;
        padding: 5px;
      }

      .table {
        border-collapse: collapse;
        width: 100%;
      }
      th,
      td {
        padding: 5px;
      }
    </style>
  </head>
  <body>
    <main>
      <form
        method="POST"
        action="/productmanager/submitproduct"
        enctype="multipart/form-data"
      >
        <div class="container mt-4">
          <h1 class="text-center">Danh sách Sản phẩm</h1>
          <div class="row">
            <div class="col col-md-12">
              <% if(product != '') { %>
              <table class="ProductTable">
                <thead>
                  <tr>
                    <th style="background-color: rgb(17, 76, 185);">
                      <button style="" onclick="RemoveFunction()">
                        Delete
                      </button>
                    </th>
                    <th>Code</th>
                    <th>Sản Phẩm</th>
                    <th>Size</th>
                    <th>Số Lượng</th>
                    <th>Số Tiền</th>
                  </tr>
                </thead>
                <tbody>
                  <% product.forEach(function(p, index) { %>
                  <tr>
                    <td>
                      <input type="checkbox" />
                    </td>
                    <td>
                      <p><%- p.code %></p>
                    </td>
                    <td>
                      <%- p.name %>
                    </td>
                    <td><%- p.size %></td>
                    <td><%- p.amount %></td>
                    <td><%- p.price %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } else { %> <% } %>
            </div>
          </div>
        </div>
      </form>
    </main>
    <script type="text/javascript">
      function RemoveFunction() {
        let checkboxs = ProductTable.querySelectorAll(
          "input[type='checkbox']:checked"
        );
        checkboxs.forEach((checkbox) => checkbox.parentElement.remove());
      }
    </script>
  </body>
</html>
