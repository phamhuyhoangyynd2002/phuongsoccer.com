<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title%></title>
    <link rel="stylesheet" href="/font/fontawesome-free-6.2.0-web/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/productStyle.css">
</head>
<body>
    <header>
        <%- include('../partials/header') -%>
    </header>
    <main>
        <!-- start slideshow -->
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/img/slideshow1.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/img/slideshow2.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/img/slideshow3.jpg" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        <!-- end slideshow -->

        <div class="container">
          <div class="banner-section text-center mt-5 mb-3">
            <div class="path mt-3">
              <span><a href="/">Trang chủ</a></span>
            </div>
          </div>
          <div class="main-body d-flex mt-5">
            <div class="side-bar border-end">
              <div class="sort-product"> 
                <h5 class="mb-3">Sắp xếp</h5>
                <div class="form-check">
                  <input type="radio" class="form-check-input" id="radio0" name="optradio" value="option0" checked>
                  <label class="form-check-label" for="radio0">Mặc định</label>
                </div>

                <div class="form-check">
                  <input type="radio" class="form-check-input" id="radio1" name="optradio" value="option1" onclick="nameaz();">
                  <label class="form-check-label" for="radio1">Tên A-Z</label>
                </div>

                <div class="form-check">
                  <input type="radio" class="form-check-input" id="radio2" name="optradio" value="option2"onclick="nameza();">
                  <label class="form-check-label" for="radio2">Tên Z-A</label>
                </div>

                <div class="form-check">
                  <input type="radio" class="form-check-input" id="radio3" name="optradio" value="option3"onclick="price_min();">
                  <label class="form-check-label" for="radio3">Giá thấp đến cao</label>
                </div>

                <div class="form-check">
                  <input type="radio" class="form-check-input" id="radio4" name="optradio" value="option4"onclick="price_max();">
                  <label class="form-check-label" for="radio4">Giá cao đến thấp</label>
                </div>
              </div>

              <div class="type">
                <h5 class="my-3">Loại sản phẩm</h5>
                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="check1" value="type1" onclick="tag1();">
                  <label class="form-check-label" for="check1">Giày sân tự nhiên</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="check2" value="type2" onclick="tag2();">
                  <label class="form-check-label" for="check2">Giày sân nhân tạo</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="check3" value="type3" onclick="tag3();">
                  <label class="form-check-label" for="check3">Giày futsal</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="check4" value="type4" onclick="tag4();">
                  <label class="form-check-label" for="check4">Giày sneaker</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="check5" value="type5" onclick="tag5();">
                  <label class="form-check-label" for="check5">Dép thể thao</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="check6" value="type6" onclick="tag6();">
                  <label class="form-check-label" for="check6">Dép thời trang</label>
                </div>
              </div>

              <div class="brand">
                <h5 class="my-3">Thương hiệu</h5>
                
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="box1" value="nike" onclick="nike();">
                    <label class="form-check-label" for="box1">Nike</label>
                </div>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="box2" value="adidas" onclick="adidas();">
                  <label class="form-check-label" for="box2">Adidas</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="box3" value="mizuno" onclick="mizuno();">
                    <label class="form-check-label" for="box3">Mizuno</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="box4" value="puma" onclick="puma();">
                    <label class="form-check-label" for="box4">Puma</label>
                </div>
              </div>
            </div>
            <div class="list-product container d-flex flex-wrap">
              <% if(product != '') { %>
                <% product.forEach(function(itemProduct, index) { %>
                  <a href="/product/<%- itemProduct.code%>">
                    <div class="card" style="width: 18rem; margin: 0.5rem; height: 510px;" >
                      <img src="/img/<%- itemProduct.product_Image %>" style="width: 17rem; margin: 0.5rem" class="card-img-top" alt="<% itemProduct.name %>">
                      <div class="card-body">
                        <h5 class="card-title">
                          <a href="/product/<%- itemProduct.code%>"><%- itemProduct.name %></a>
                        </h5>
                        <h5 class="min-price">Khuyến mãi: <%- itemProduct.discount_min %>vnđ</h5>
                        <h6 class="text-decoration-line-through">Giá gốc: <%- itemProduct.discount_max %>vnđ</h6>
                      </div>
                    </div>
                  </a>
                  
                <% }) %>
              <% } %>
            </div>
          </div>
          
        </div>

    </main>
    <footer>
        <%- include('../partials/footer') -%>
    </footer>

    <!-- javascript -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
      
         function nike() {
            window.location="/producer/1";
         }
         function adidas() {
            window.location="/producer/2";
         }
         function puma() {
            window.location="/producer/5";
         }
         function puma() {
            window.location="/producer/9";
         }
        function tag1() {
            window.location="/tag/1";
         }
         function tag2() {
            window.location="/tag/2";
         }
         function tag2() {
            window.location="/tag/2";
         }
         function tag3() {
            window.location="/tag/3";
         }
         function tag4() {
            window.location="/tag/4";
         }
         function tag5() {
            window.location="/tag/5";
         }
         function tag6() {
            window.location="/tag/6";
         }
         function nameaz() {
            window.location=window.location +"/nameaz";
         }
         function nameza() {
            window.location=window.location +"/nameza";
         }
         function price_min() {
            window.location=window.location +"/price_min";
         }
         function price_max() {
            window.location=window.location +"/price_max";
         }
   </script>
</body>
</html>



